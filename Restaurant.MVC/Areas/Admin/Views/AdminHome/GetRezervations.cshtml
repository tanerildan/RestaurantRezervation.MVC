@using Restaurant.DAL.Entities
@model IEnumerable<Rezervasyon>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Rezervasyonlar</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/scripts/jquery-3.0.0.min.js"></script>
</head>
<body>
    <div class="container">

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Musteri Adı</th>
                    <th>Musteri Soyadı</th>
                    <th>Musteri Telefonu</th>
                    <th>Rezervasyon Tarihi</th>
                    <th>Rezervasyon Başlangıc Saati</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <th>@item.ID</th>
                        <td>@item.MusteriAd</td>
                        <td>@item.MusteriSoyad</td>
                        <td>@item.MusteriTel</td>
                        <td>@item.RezGunu</td>
                        <td>@item.RezSaati</td>
                        <td>
                          
                            <a class="btn btn-outline-danger" href="/Admin/AdminHome/Sil/@item.ID" role="button">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
        <div class="container">
            <table class="table">
                <thead>
                    <tr>
                        <a class="btn btn-primary" href="/Admin/AdminHome/Index" role="button"> AnaSayfaya Dön</a>
                    </tr>
                </thead>

            </table>
        </div>
    </div>
    <script src="~/scripts/bootstrap.min.js"></script>
</body>
</html>
